	<script type="text/javascript">
	function addOnloadEvent(fnc) {
		if (typeof window.addEventListener != "undefined")
			window.addEventListener("load", fnc, false);
		else if (typeof window.attachEvent != "undefined") {
			window.attachEvent("onload", fnc);
		} else {
			if (window.onload != null) {
				var oldOnload = window.onload;
				window.onload = function(e) {
					oldOnload(e);
					window[fnc]();
				};
			} else
				window.onload = fnc;
		}
	}
	var gnb_service = "www";
	var gnb_logout = document.location.href;
	var gnb_template = "gnb_common_utf8";
	var gnb_one_naver = 1;

	addOnloadEvent(function() {
		attachDocumentClickEvt();
		getGNB();
		$Element("content").delegate("click", ".tgl_more", function(evt) {
			evt.stop();
			var wel = $Element(evt.element);
			var sTarget = wel.attr("href");
			var welTarget = $Element($$.getSingle(sTarget));
			if (welTarget.visible()) {
				welTarget.hide();
				wel.query(".ico_tgl").removeClass("on");
			} else {
				welTarget.show();
				wel.query(".ico_tgl").addClass("on");
			}	
		});
	});

	function setHeader(sId) {
		document.getElementById(sId).className = sId + " on";
	}

	function clickSelLang(el) {
		var cur = document.getElementsByClassName("lang_wrap")[0].className;

		if (cur.indexOf("opn") > 1) {
			document.getElementsByClassName("lang_wrap")[0].className = "lang_wrap";
		} else {
			document.getElementsByClassName("lang_wrap")[0].className = "lang_wrap opn";
		}
	}

	function changeLang(lang) {
		if (lang === 'en') {
			var engFile = ['/policy/service_en.html', '/policy/service_location_en.html', '/policy/service_group_en.html', '/policy/privacy_en.html'];
			var toPath =  location.href.replace("/rules", "/policy").replace(".html", "_en.html");

			for (var i in engFile) {
				if (toPath.indexOf(engFile[i]) > 0) {
					location.href = toPath;
					return false;
				}
			}

			location.href = engFile[0];

		} else {
			document.getElementsByClassName("lang_wrap")[0].className = "lang_wrap";
		}
	}

    jQuery(document).ready(function() {
        var hash = location.hash;
        if (hash) {
            jQuery(hash).parent().get(0).scrollIntoView();
        }
    });

</script>
